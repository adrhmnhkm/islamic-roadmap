---
import Layout from '../layouts/Layout.astro'
import { ProtectedRoute } from '../components/ProtectedRoute'
import { AnalyticsDashboard } from '../components/AnalyticsDashboard'
import { ProgressDataManager } from '../components/ProgressDataManager'
import { AchievementTracker } from '../components/AchievementTracker'
---

<Layout title="Analytics - Islamic Roadmap">
  <main class="min-h-screen bg-gray-50 py-8">
    <div class="container mx-auto px-4 max-w-6xl">
      <ProtectedRoute client:load>
        <div class="mb-6">
          <nav aria-label="Breadcrumb">
            <ol class="flex items-center space-x-2 text-sm text-gray-600">
              <li><a href="/" class="hover:text-gray-900">Beranda</a></li>
              <li><span class="mx-2">/</span></li>
              <li class="text-gray-900 font-medium">Analytics</li>
            </ol>
          </nav>
        </div>

        <!-- Header -->
        <div class="bg-gradient-to-r from-purple-500 to-blue-600 rounded-lg p-6 text-white mb-8">
          <h1 class="text-3xl font-bold mb-2">📊 Analytics Dashboard</h1>
          <p class="text-purple-100">Pantau progress pembelajaran Anda secara menyeluruh</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
          <!-- Data Management Section -->
          <div>
            <ProgressDataManager 
              client:load
            />
          </div>

          <!-- Achievement Tracker -->
          <div>
            <AchievementTracker 
              client:load
            />
          </div>
        </div>

        <!-- Analytics Content -->
        <AnalyticsDashboard client:load />

        {/* Quick Actions */}
        <div class="mt-8 bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">🚀 Aksi Cepat</h3>
          <div class="flex flex-wrap gap-4">
            <a 
              href="/demo-progress"
              class="px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors"
            >
              🧪 Demo Progress
            </a>
            <a 
              href="/topics"
              class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors"
            >
              📚 Lihat Semua Topik
            </a>
            <a 
              href="/"
              class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition-colors"
            >
              🏠 Kembali ke Beranda
            </a>
          </div>
        </div>
      </ProtectedRoute>
    </div>
  </main>
</Layout> 