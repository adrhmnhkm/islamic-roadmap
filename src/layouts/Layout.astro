---
interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
  canonicalURL?: string;
}

const { 
  title, 
  description = "Pelajari Islam secara terstruktur dengan panduan belajar yang komprehensif, dari dasar hingga lanjutan.",
  image = "/og-image.png",
  type = "website",
  canonicalURL = Astro.url.href
} = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />
    
    <!-- Additional Meta Tags -->
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Islamic Roadmap" />
    <meta name="keywords" content="islam, belajar islam, quran, hadits, fiqih, aqidah, sirah, bahasa arab, islamic roadmap" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Amiri:wght@400;700&family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Islamic Roadmap",
        "description": "Panduan belajar Islam terarah dan terstruktur",
        "url": "https://islamicroadmap.com",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://islamicroadmap.com/search?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-emerald-50 via-teal-50 to-cyan-50">
    <nav class="sticky top-0 z-50 backdrop-blur-md bg-white/70 border-b border-gray-200">
      <div class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <a href="/" class="flex items-center">
            <img src="/logo.svg" alt="Islamic Roadmap" class="h-8" />
          </a>

          {/* Desktop Menu */}
          <div class="hidden md:flex space-x-6">
            <a href="/" class="text-gray-600 hover:text-emerald-600 transition-colors font-medium">Beranda</a>
            <a href="#topics" class="text-gray-600 hover:text-emerald-600 transition-colors font-medium">Topik</a>
            <a href="#about" class="text-gray-600 hover:text-emerald-600 transition-colors font-medium">Tentang</a>
          </div>

          {/* Mobile Menu Button */}
          <button 
            id="mobile-menu-button"
            class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors"
            aria-label="Menu"
          >
            <svg 
              class="w-6 h-6 text-gray-600" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M4 6h16M4 12h16M4 18h16"
              />
            </svg>
          </button>
        </div>

        {/* Mobile Menu */}
        <div 
          id="mobile-menu"
          class="hidden md:hidden mt-4 py-4 border-t border-gray-100"
        >
          <div class="flex flex-col space-y-4">
            <a href="/" class="text-gray-600 hover:text-emerald-600 transition-colors font-medium">Beranda</a>
            <a href="#topics" class="text-gray-600 hover:text-emerald-600 transition-colors font-medium">Topik</a>
            <a href="#about" class="text-gray-600 hover:text-emerald-600 transition-colors font-medium">Tentang</a>
          </div>
        </div>
      </div>
    </nav>

    <div class="min-h-[calc(100vh-64px)]">
      <slot />
    </div>

    <footer class="bg-[#111827] text-gray-400">
      <div class="container mx-auto px-4 py-8">
        <div class="flex items-center justify-center gap-2 mb-4">
          <img src="/logo.svg" alt="Islamic Roadmap" class="h-8" />
          <span class="text-sm text-gray-500">by</span>
          <a 
            href="https://twitter.com/muktafiatsar" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-blue-400 hover:text-blue-300 transition-colors font-medium"
          >
            @muktafiatsar
          </a>
        </div>

        <p class="text-center text-sm text-gray-500">
          Panduan belajar Islam yang terstruktur untuk membantu Anda memahami agama dengan lebih baik.
        </p>

        <div class="flex justify-center space-x-6 mb-8">
          <a 
            href="https://twitter.com/muktafiatsar"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-gray-300 transition-colors"
            title="Twitter"
          >
            <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a 
            href="https://github.com/adrhmnhkm"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-gray-300 transition-colors"
            title="GitHub"
          >
            <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
            </svg>
          </a>
          <a 
            href="mailto:adrhmnhkm@example.com"
            class="text-gray-400 hover:text-gray-300 transition-colors"
            title="Email"
          >
            <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
              <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z"/>
              <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z"/>
            </svg>
          </a>
        </div>

        <div class="border-t border-gray-800 pt-8">
          <div class="flex flex-col md:flex-row justify-between items-center">
            <div class="flex items-center space-x-2 mb-4 md:mb-0">
              <span class="text-gray-500">©</span>
              <a href="/" class="text-gray-300 hover:text-white transition-colors">
                Islamic Roadmap
              </a>
              <span class="text-gray-500">•</span>
              <a href="/terms" class="text-gray-500 hover:text-gray-300 transition-colors">
                Terms
              </a>
              <span class="text-gray-500">•</span>
              <a href="/privacy" class="text-gray-500 hover:text-gray-300 transition-colors">
                Privacy
              </a>
            </div>

            <div class="flex items-center space-x-4">
              <a 
                href="https://roadmap.sh" 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-sm text-gray-500 hover:text-gray-300 transition-colors"
              >
                Terinspirasi dari roadmap.sh
              </a>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <script>
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
          
          // Change menu icon
          const svg = mobileMenuButton.querySelector('svg');
          if (svg) {
            if (mobileMenu.classList.contains('hidden')) {
              svg.innerHTML = `
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M4 6h16M4 12h16M4 18h16"
                />
              `;
            } else {
              svg.innerHTML = `
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M6 18L18 6M6 6l12 12"
                />
              `;
            }
          }
        });

        // Close mobile menu when clicking outside
        document.addEventListener('click', (event) => {
          if (!mobileMenuButton.contains(event.target as Node) && 
              !mobileMenu.contains(event.target as Node)) {
            mobileMenu.classList.add('hidden');
            const svg = mobileMenuButton.querySelector('svg');
            if (svg) {
              svg.innerHTML = `
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M4 6h16M4 12h16M4 18h16"
                />
              `;
            }
          }
        });

        // Close mobile menu when clicking on a link
        const mobileMenuLinks = mobileMenu.querySelectorAll('a');
        mobileMenuLinks.forEach(link => {
          link.addEventListener('click', () => {
            mobileMenu.classList.add('hidden');
            const svg = mobileMenuButton.querySelector('svg');
            if (svg) {
              svg.innerHTML = `
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M4 6h16M4 12h16M4 18h16"
                />
              `;
            }
          });
        });
      }
    </script>
  </body>
</html>

<style is:global>
  :root {
    --font-sans: 'Plus Jakarta Sans', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    --font-arabic: 'Amiri', serif;
  }

  body {
    font-family: var(--font-sans);
  }

  .arabic {
    font-family: var(--font-arabic);
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Modern scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb {
    background: #27ae60;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #219653;
  }
</style>