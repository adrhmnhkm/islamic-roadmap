---
interface Props {
  title: string;
  description: string;
  icon: string;
  slug?: string;
}

const { title, description, icon, slug } = Astro.props;
---

<a href={slug ? `/topics/${slug}` : '#'} class="block">
  <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
    <div class="text-4xl text-accent mb-4">{icon}</div>
    <h3 class="text-xl font-bold text-primary mb-2">{title}</h3>
    <p class="text-gray-600">{description}</p>
  </div>
</a>