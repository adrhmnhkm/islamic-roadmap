---
interface Resource {
  title: string;
  author: string;
  type: 'article' | 'video';
  description: string;
  language: string;
  url: string;
  platform?: string;
}

interface Props {
  resources: Resource[];
}

const { resources } = Astro.props;

const videos = resources.filter(resource => resource.type === 'video');
const articles = resources.filter(resource => resource.type === 'article');
---

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-2xl font-bold text-primary mb-6">
      <span class="mr-2">üé•</span>Video
    </h3>
    <div class="space-y-6">
      {videos.map((resource) => (
        <div 
          class="border rounded-lg p-4 hover:shadow-md transition-shadow"
          data-resource={JSON.stringify({ ...resource, type: 'Video' })}
        >
          <div class="flex items-start gap-2">
            <span class="text-2xl">üé•</span>
            <div>
              <h4 class="text-lg font-bold text-primary mb-2">{resource.title}</h4>
              <p class="text-gray-600 text-sm mb-2">
                oleh {resource.author}
                {resource.platform && <span class="text-gray-500"> di {resource.platform}</span>}
              </p>
            </div>
          </div>
          <p class="text-gray-700 mb-4">{resource.description}</p>
          <div class="flex flex-wrap gap-2 mb-4">
            <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
              Video
            </span>
            <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-sm">
              {resource.language}
            </span>
          </div>
          <a
            href={resource.url}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center text-accent hover:text-primary transition-colors"
          >
            <svg
              class="w-4 h-4 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
              ></path>
            </svg>
            Buka Video
          </a>
        </div>
      ))}
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-2xl font-bold text-primary mb-6">
      <span class="mr-2">üìù</span>Artikel
    </h3>
    <div class="space-y-6">
      {articles.map((resource) => (
        <div 
          class="border rounded-lg p-4 hover:shadow-md transition-shadow"
          data-resource={JSON.stringify({ ...resource, type: 'Artikel' })}
        >
          <div class="flex items-start gap-2">
            <span class="text-2xl">üìù</span>
            <div>
              <h4 class="text-lg font-bold text-primary mb-2">{resource.title}</h4>
              <p class="text-gray-600 text-sm mb-2">
                oleh {resource.author}
                {resource.platform && <span class="text-gray-500"> di {resource.platform}</span>}
              </p>
            </div>
          </div>
          <p class="text-gray-700 mb-4">{resource.description}</p>
          <div class="flex flex-wrap gap-2 mb-4">
            <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
              Artikel
            </span>
            <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-sm">
              {resource.language}
            </span>
          </div>
          <a
            href={resource.url}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center text-accent hover:text-primary transition-colors"
          >
            <svg
              class="w-4 h-4 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
              ></path>
            </svg>
            Buka Artikel
          </a>
        </div>
      ))}
    </div>
  </div>
</div>